defined( 'ABSPATH' ) or die( 'No script kiddies please!' );

add_action( 'init', 'create_post_type' );
function create_post_type() {
  register_post_type( 'rvrmth-post-banner',
    array(
      'labels' => array(
        'name' => __( 'Banners' ),
        'singular_name' => __( 'Banner' )
      ),
      'public' => true,
      'has_archive' => true,
    )
  );
}

?>

